<Window x:Class="POSSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:POSSystem.Views"
        xmlns:vm="clr-namespace:POSSystem.ViewModels"
        xmlns:converters="clr-namespace:POSSystem.Converters"
        mc:Ignorable="d"
        Title="POS System - Professional Edition" 
        Height="900" 
        Width="1400"
        MinHeight="700"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0F172A">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BoolToSyncColorConverter x:Key="BoolToSyncColor"/>
        <converters:BoolToOnlineTextConverter x:Key="BoolToOnlineText"/>
        
        <!-- View DataTemplates -->
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LicenseViewModel}">
            <views:LicenseView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventoryViewModel}">
            <views:InventoryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StoreSettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <!-- Main Content Area -->
        <ContentControl Content="{Binding CurrentViewModel}"/>
        
        <!-- Global Status Bar -->
        <Border VerticalAlignment="Bottom" 
                Background="#1E293B" 
                Height="32"
                Padding="16,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Text -->
                <TextBlock Grid.Column="0" 
                           Text="Ready" 
                           Foreground="#64748B" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>
                
                <!-- Sync Status Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                    <Ellipse Width="8" Height="8" 
                             Fill="{Binding SyncStatus.IsOnline, Converter={StaticResource BoolToSyncColor}, FallbackValue=#EF4444}" 
                             Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding SyncStatus.IsOnline, Converter={StaticResource BoolToOnlineText}, FallbackValue=Offline}" 
                               Foreground="#94A3B8" 
                               FontSize="12"/>
                </StackPanel>
                
                <!-- Pending Sync Count -->
                <TextBlock Grid.Column="2" 
                           Foreground="#64748B" 
                           FontSize="12" 
                           VerticalAlignment="Center"
                           Margin="0,0,24,0">
                    <Run Text="Pending: "/>
                    <Run Text="{Binding SyncStatus.PendingCount, FallbackValue=0}" Foreground="#FBBF24"/>
                </TextBlock>
                
                <!-- Version -->
                <TextBlock Grid.Column="3" 
                           Text="{Binding CurrentVersion, StringFormat='v{0}', FallbackValue=v1.0.0}" 
                           Foreground="#475569" 
                           FontSize="11" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
