<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Theme synced with React globals.css dark theme -->
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#111827</Color>
    <Color x:Key="ForegroundColor">#F9FAFB</Color>
    <Color x:Key="CardColor">#1F2937</Color>
    <Color x:Key="CardForegroundColor">#F9FAFB</Color>
    <Color x:Key="PopoverColor">#1F2937</Color>
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#3B82F6</Color>
    <Color x:Key="PrimaryForegroundColor">#FFFFFF</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#374151</Color>
    <Color x:Key="SecondaryForegroundColor">#F9FAFB</Color>
    
    <!-- Muted Colors -->
    <Color x:Key="MutedColor">#374151</Color>
    <Color x:Key="MutedForegroundColor">#9CA3AF</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#374151</Color>
    <Color x:Key="AccentForegroundColor">#F9FAFB</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="DestructiveColor">#EF4444</Color>
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    
    <!-- Border and Input -->
    <Color x:Key="BorderColor">#374151</Color>
    <Color x:Key="InputColor">#374151</Color>
    <Color x:Key="RingColor">#3B82F6</Color>
    
    <!-- Chart Colors -->
    <Color x:Key="Chart1Color">#3B82F6</Color>
    <Color x:Key="Chart2Color">#10B981</Color>
    <Color x:Key="Chart3Color">#F59E0B</Color>
    <Color x:Key="Chart4Color">#8B5CF6</Color>
    <Color x:Key="Chart5Color">#EC4899</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="SidebarColor">#0F172A</Color>
    <Color x:Key="SidebarForegroundColor">#F9FAFB</Color>
    <Color x:Key="SidebarPrimaryColor">#3B82F6</Color>
    <Color x:Key="SidebarAccentColor">#1E293B</Color>
    <Color x:Key="SidebarBorderColor">#1E293B</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="{StaticResource CardForegroundColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForegroundColor}"/>
    <SolidColorBrush x:Key="DestructiveBrush" Color="{StaticResource DestructiveColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="InputBrush" Color="{StaticResource InputColor}"/>
    <SolidColorBrush x:Key="RingBrush" Color="{StaticResource RingColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="SidebarAccentBrush" Color="{StaticResource SidebarAccentColor}"/>
    
    <!-- Chart Brushes -->
    <SolidColorBrush x:Key="Chart1Brush" Color="{StaticResource Chart1Color}"/>
    <SolidColorBrush x:Key="Chart2Brush" Color="{StaticResource Chart2Color}"/>
    <SolidColorBrush x:Key="Chart3Brush" Color="{StaticResource Chart3Color}"/>
    <SolidColorBrush x:Key="Chart4Brush" Color="{StaticResource Chart4Color}"/>
    <SolidColorBrush x:Key="Chart5Brush" Color="{StaticResource Chart5Color}"/>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="RadiusSm">6</CornerRadius>
    <CornerRadius x:Key="RadiusMd">8</CornerRadius>
    <CornerRadius x:Key="RadiusLg">10</CornerRadius>
    <CornerRadius x:Key="RadiusXl">14</CornerRadius>
    
    <!-- Spacing -->
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="ButtonPadding">16,10</Thickness>
    <Thickness x:Key="InputPadding">12,10</Thickness>
    
    <sys:Double x:Key="SpacingXs">4</sys:Double>
    <sys:Double x:Key="SpacingSm">8</sys:Double>
    <sys:Double x:Key="SpacingMd">16</sys:Double>
    <sys:Double x:Key="SpacingLg">24</sys:Double>
    <sys:Double x:Key="SpacingXl">32</sys:Double>
    
    <!-- Typography -->
    <FontFamily x:Key="DefaultFont">Segoe UI, sans-serif</FontFamily>
    <FontFamily x:Key="MonoFont">Consolas, monospace</FontFamily>
    
    <sys:Double x:Key="FontSizeXs">11</sys:Double>
    <sys:Double x:Key="FontSizeSm">13</sys:Double>
    <sys:Double x:Key="FontSizeBase">15</sys:Double>
    <sys:Double x:Key="FontSizeLg">18</sys:Double>
    <sys:Double x:Key="FontSizeXl">24</sys:Double>
    <sys:Double x:Key="FontSize2Xl">32</sys:Double>
    
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
</ResourceDictionary>
