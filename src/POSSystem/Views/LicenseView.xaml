<UserControl x:Class="POSSystem.Views.LicenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:POSSystem.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolConverter x:Key="InverseBool"/>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="52"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#475569"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E1E2E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Main Content -->
        <Border Background="#1E293B" 
                CornerRadius="24" 
                Width="520" 
                Padding="48"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="80" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Logo -->
                <Border CornerRadius="20" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6366F1" Offset="0"/>
                            <GradientStop Color="#8B5CF6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="â¬¡" FontSize="42" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="POS System" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Professional Edition" 
                           FontSize="14" 
                           Foreground="#64748B" 
                           HorizontalAlignment="Center"
                           Margin="0,8,0,32"/>
                
                <!-- Loading State -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" 
                            HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Border Width="48" Height="48" CornerRadius="24" Background="#334155" Margin="0,0,0,16">
                        <TextBlock Text="âŸ³" FontSize="24" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#94A3B8" FontSize="14"/>
                </StackPanel>
                
                <!-- Status Message -->
                <Border Background="#334155" CornerRadius="12" Padding="20" Margin="0,0,0,24"
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBool}}">
                    <StackPanel>
                        <TextBlock Text="License Status" FontSize="11" Foreground="#64748B" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="15" 
                                   Foreground="#E2E8F0"
                                   TextWrapping="Wrap"/>
                        
                        <!-- Plan Info -->
                        <Border Background="#1E293B" CornerRadius="8" Padding="16" Margin="0,16,0,0"
                                Visibility="{Binding IsLicenseValid, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Plan" FontSize="10" Foreground="#64748B"/>
                                    <TextBlock Text="{Binding PlanName, FallbackValue=Trial}" 
                                               FontSize="14" Foreground="#10B981" FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="Days Left" FontSize="10" Foreground="#64748B"/>
                                    <TextBlock Text="{Binding DaysRemaining, FallbackValue=âˆž}" 
                                               FontSize="14" Foreground="#FBBF24" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- License Key Input - Always visible -->
                <Border Background="#334155" CornerRadius="12" Padding="20" Margin="0,0,0,16"
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBool}}">
                    <StackPanel>
                        <TextBlock Text="ENTER LICENSE KEY" FontSize="11" Foreground="#64748B" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding LicenseKeyInput, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     FontFamily="Consolas"
                                     Padding="12,10"
                                     Background="#0F172A"
                                     Foreground="#E2E8F0"
                                     BorderBrush="#475569"
                                     BorderThickness="1"
                                     CaretBrush="#6366F1"
                                     VerticalContentAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                      Margin="12,10"
                                                                      VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding ActivateLicenseCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding ActivateLicenseCommand}"
                                    IsEnabled="{Binding CanActivate}"
                                    Margin="8,0,0,0"
                                    Padding="16,10"
                                    Background="#6366F1"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#4F46E5"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#475569"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ActivateButtonText, FallbackValue=ðŸ”“ Activate}" 
                                               FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Activation Status/Error -->
                        <TextBlock Text="{Binding ActivationErrorMessage}" 
                                   Foreground="#EF4444" 
                                   FontSize="11"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding HasActivationError, Converter={StaticResource BoolToVisibility}}"/>
                        

                    </StackPanel>
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource InverseBool}}">
                    <Button Style="{StaticResource SuccessButton}"
                            Command="{Binding EnterPOSCommand}"
                            IsEnabled="{Binding IsLicenseValid}"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†’" FontSize="18" Margin="0,0,12,0"/>
                            <TextBlock Text="Enter POS System"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshLicenseCommand}"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Text="Refresh License"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Subscription / Activation Overlay -->
        <Grid Background="#0F172AE8" Visibility="{Binding ShowSubscriptionOverlay, Converter={StaticResource BoolToVisibility}}">
            <Border Background="#1E293B" 
                    CornerRadius="20" 
                    Width="520"
                    Padding="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="60" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="ðŸ”‘" FontSize="48" Foreground="#6366F1" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Activate License" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Enter your license key to activate POS System." 
                               FontSize="13" 
                               Foreground="#94A3B8" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,12,0,24"/>
                    
                    <!-- License Key Input -->
                    <TextBlock Text="LICENSE KEY" FontSize="11" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="LicenseKeyInput"
                             Text="{Binding LicenseKeyInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="15"
                             FontFamily="Consolas"
                             Padding="16,14"
                             Background="#0F172A"
                             Foreground="#E2E8F0"
                             BorderBrush="#334155"
                             BorderThickness="2"
                             CaretBrush="#6366F1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="16,14"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding ActivateLicenseCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <!-- Activation Error Message -->
                    <TextBlock Text="{Binding ActivationErrorMessage}" 
                               Foreground="#EF4444" 
                               FontSize="12"
                               Margin="0,8,0,0"
                               Visibility="{Binding HasActivationError, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <!-- Activate Button -->
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding ActivateLicenseCommand}"
                            IsEnabled="{Binding CanActivate}"
                            Margin="0,20,0,0">
                        <Grid>
                            <!-- Normal State -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsActivating, Converter={StaticResource InverseBool}}">
                                <TextBlock Text="ðŸ”“" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Activate License"/>
                            </StackPanel>
                            <!-- Loading State -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsActivating, Converter={StaticResource BoolToVisibility}}">
                                <Border Width="20" Height="20" CornerRadius="10" Background="#4F46E5" Margin="0,0,10,0">
                                    <Border.RenderTransform>
                                        <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                                    </Border.RenderTransform>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360" Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <TextBlock Text="âŸ³" FontSize="12" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Validating..."/>
                            </StackPanel>
                        </Grid>
                    </Button>
                    
                    <Border Height="1" Background="#334155" Margin="0,24"/>
                    
                    <!-- Alternative: Purchase Subscription -->
                    <TextBlock Text="Don't have a license?" 
                               FontSize="12" Foreground="#64748B" 
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    
                    <Button Style="{StaticResource WarningButton}"
                            Command="{Binding OpenStripeCheckoutCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’³" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Purchase Subscription"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshLicenseCommand}"
                            Margin="0,12,0,0">
                        <TextBlock Text="I've already paid - Refresh"/>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Machine ID - Bottom Right Corner (Subtle) -->
        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Margin="0,0,16,8"
                    Opacity="0.4"
                    Cursor="Hand"
                    ToolTip="Click to copy Machine ID">
            <StackPanel.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CopyMachineIdCommand}"/>
            </StackPanel.InputBindings>
            <TextBlock Text="ID: " 
                       FontSize="9" 
                       Foreground="#94A3B8" 
                       FontFamily="Consolas"/>
            <TextBlock Text="{Binding MachineId}" 
                       FontSize="9" 
                       Foreground="#94A3B8" 
                       FontFamily="Consolas"/>
        </StackPanel>
    </Grid>
</UserControl>
