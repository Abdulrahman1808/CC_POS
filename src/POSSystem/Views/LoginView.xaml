<UserControl x:Class="POSSystem.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:POSSystem.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolConverter x:Key="InverseBool"/>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Padding" Value="28,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#475569"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#475569"/>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- Background Pattern -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border Background="#1E293B" 
                CornerRadius="20" 
                Width="480" 
                Height="Auto"
                Padding="48"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Logo/Title -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,32">
                    <Border Background="#6366F1" CornerRadius="16" Width="70" Height="70" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="â¬¡" FontSize="36" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="POS System" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Professional Point of Sale" 
                               FontSize="14" 
                               Foreground="#64748B" 
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <!-- Machine ID Card -->
                <Border Background="#334155" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Machine ID" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding MachineId}" 
                                       FontSize="13" 
                                       Foreground="#E2E8F0"
                                       FontFamily="Consolas"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Style="{StaticResource SecondaryButton}"
                                Content="ðŸ“‹"
                                Command="{Binding CopyMachineIdCommand}"
                                Padding="12,8"
                                FontSize="14"
                                ToolTip="Copy to clipboard"/>
                    </Grid>
                </Border>
                
                <!-- Status Card -->
                <Border Background="#334155" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="License Status" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,12"/>
                        
                        <!-- Loading State -->
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                                    Margin="0,0,0,12">
                            <Border Width="20" Height="20" CornerRadius="10" Background="#6366F1" Margin="0,0,10,0">
                                <Border.RenderTransform>
                                    <RotateTransform CenterX="10" CenterY="10"/>
                                </Border.RenderTransform>
                            </Border>
                            <TextBlock Text="Verifying license..." Foreground="#E2E8F0" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Status Message -->
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="15" 
                                   Foreground="#E2E8F0"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>
                        
                        <!-- Plan Details (when valid) -->
                        <Border Background="#1E293B" CornerRadius="8" Padding="16" Margin="0,16,0,0"
                                Visibility="{Binding IsLicenseValid, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Plan" FontSize="11" Foreground="#64748B"/>
                                    <TextBlock Text="{Binding PlanName}" FontSize="14" Foreground="#10B981" FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="Days Left" FontSize="11" Foreground="#64748B"/>
                                    <TextBlock Text="{Binding DaysRemaining}" FontSize="14" Foreground="#FBBF24" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel>
                    <!-- Retry Button -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Content="ðŸ”„ Retry Verification"
                            Command="{Binding VerifyLicenseCommand}"
                            Margin="0,0,0,12"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>
                    
                    <!-- Purchase Button (shown when not valid) -->
                    <Button Style="{StaticResource WarningButton}"
                            Command="{Binding PurchaseSubscriptionCommand}"
                            Visibility="{Binding ShowPurchaseButton, Converter={StaticResource BoolToVisibility}}"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’³" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Purchase Subscription"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Enter POS Button -->
                    <Button Style="{StaticResource SuccessButton}"
                            Command="{Binding EnterPOSCommand}"
                            IsEnabled="{Binding IsLicenseValid}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†’" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Enter POS System"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Footer -->
                <TextBlock Text="Machine ID is used to verify your subscription" 
                           FontSize="11" 
                           Foreground="#475569" 
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
