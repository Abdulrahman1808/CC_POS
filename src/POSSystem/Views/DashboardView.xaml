<UserControl x:Class="POSSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:POSSystem.Converters"
             xmlns:views="clr-namespace:POSSystem.Views"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <converters:BoolToSyncColorConverter x:Key="BoolToSyncColor"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BoolToOnlineTextConverter x:Key="BoolToOnlineText"/>
        
        <!-- Touch-friendly Button Base -->
        <Style x:Key="TouchButton" TargetType="Button">
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="MinWidth" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Product Button - Large Touch Target -->
        <Style x:Key="ProductTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#475569"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4338CA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#475569"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#475569"/>
        </Style>
        
        <!-- Success Button -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Cart Item Button -->
        <Style x:Key="CartItemButton" TargetType="Button">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Category Chip -->
        <Style x:Key="CategoryChip" TargetType="Button">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Search Box -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="CaretBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <TextBlock Text="ðŸ” Search products..." 
                                           Foreground="#64748B" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource IntToVisibility}}"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Developer Mode Overlay - Only visible when in dev mode -->
        <views:DeveloperOverlay Grid.Row="0"
                                Visibility="{Binding IsDeveloperMode, Converter={StaticResource BoolToVisibility}}"
                                DataContext="{Binding}"/>
        
        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Bar -->
            <Border Grid.Row="0" Background="#1E293B" Padding="24,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â¬¡" FontSize="32" Foreground="#6366F1" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="POS System" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Professional Edition" FontSize="11" Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Stats -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="#334155" CornerRadius="10" Padding="20,10" Margin="8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’°" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Today's Sales" FontSize="11" Foreground="#94A3B8"/>
                                    <TextBlock Text="{Binding DailySales, StringFormat='E {0:N2}'}" FontSize="18" FontWeight="Bold" Foreground="#10B981"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#334155" CornerRadius="10" Padding="20,10" Margin="8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Transactions" FontSize="11" Foreground="#94A3B8"/>
                                    <TextBlock Text="{Binding TransactionCount}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Navigation: Inventory -->
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding NavigateToInventoryCommand}"
                                Padding="16,10" Margin="8,0"
                                ToolTip="Manage Products">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Inventory" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Navigation: Reports -->
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding NavigateToReportsCommand}"
                                Padding="16,10" Margin="8,0"
                                ToolTip="View Reports">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Reports" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Navigation: Settings -->
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding NavigateToSettingsCommand}"
                                Padding="16,10" Margin="8,0"
                                ToolTip="Store Settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš™" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Settings" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Right Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Sync Status -->
                        <Border Background="#334155" CornerRadius="10" Padding="14,10" Margin="0,0,12,0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" 
                                         Fill="{Binding IsOnline, Converter={StaticResource BoolToSyncColor}}" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToOnlineText}}" 
                                           Foreground="#E2E8F0" FontSize="13" VerticalAlignment="Center"/>
                                <TextBlock Text=" â€¢ " Foreground="#475569" VerticalAlignment="Center"
                                           Visibility="{Binding PendingSyncCount, Converter={StaticResource IntToVisibilityPositive}}"/>
                                <TextBlock Text="{Binding PendingSyncCount, StringFormat='{}{0} pending'}" 
                                           Foreground="#FBBF24" FontSize="12" VerticalAlignment="Center"
                                           Visibility="{Binding PendingSyncCount, Converter={StaticResource IntToVisibilityPositive}}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Update Banner -->
                        <Button Style="{StaticResource SecondaryButton}" 
                                Command="{Binding ApplyUpdateCommand}"
                                Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BoolToVisibility}}"
                                Background="#F59E0B"
                                Padding="14,10"
                                Margin="0,0,12,0">
                            <TextBlock Text="{Binding NewVersion, StringFormat='â¬† Update to {0}'}" Foreground="White"/>
                        </Button>
                        
                        <!-- Test Sale Button (DEBUG only) -->
                        <Button Style="{StaticResource SecondaryButton}" 
                                Command="{Binding CreateTestSaleCommand}"
                                Visibility="{Binding IsDebugMode, Converter={StaticResource BoolToVisibility}}"
                                Background="#F59E0B"
                                Padding="14,10"
                                Margin="0,0,12,0"
                                ToolTip="Create random test transaction">
                            <TextBlock Text="ðŸ§ª Test Sale" Foreground="White"/>
                        </Button>
                        
                        <!-- Refresh -->
                        <Button Style="{StaticResource SecondaryButton}" 
                                Command="{Binding RefreshDataCommand}"
                                Padding="14,10">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="500"/>
                    <ColumnDefinition Width="420"/>
                </Grid.ColumnDefinitions>
                
                <!-- Products Panel -->
                <Border Grid.Column="0" Background="#1E293B" CornerRadius="16" Padding="20" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search -->
                        <TextBox Grid.Row="0" 
                                 Style="{StaticResource SearchBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,16"/>
                        
                        <!-- Categories -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Categories}" Margin="0,0,0,16">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource CategoryChip}" 
                                            Content="{Binding}"
                                            Command="{Binding DataContext.FilterByCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Products Grid -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Products}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource ProductTouchButton}"
                                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Product Icon/Image -->
                                                <Border Grid.Row="0" Background="#1E293B" CornerRadius="8" Margin="4" Padding="8">
                                                    <TextBlock Text="ðŸ“¦" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Name -->
                                                <TextBlock Grid.Row="1" 
                                                           Text="{Binding Name}" 
                                                           Foreground="White"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextAlignment="Center"
                                                           Margin="4,4,4,2"/>
                                                
                                                <!-- Price -->
                                                <TextBlock Grid.Row="2"
                                                           Text="{Binding Price, StringFormat='E {0:N2}'}"
                                                           Foreground="#6366F1"
                                                           FontSize="15"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           Margin="4,0,4,4"/>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Empty State -->
                        <StackPanel Grid.Row="2" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding Products.Count, Converter={StaticResource ZeroToVisibility}}">
                            <TextBlock Text="ðŸ“¦" FontSize="64" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="No products found" FontSize="18" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            <TextBlock Text="Add products to get started" FontSize="14" Foreground="#475569" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Cart Panel -->
                <Border Grid.Column="1" Background="#1E293B" CornerRadius="16" Padding="20" Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Cart Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ›’" FontSize="22" Margin="0,0,10,0"/>
                                <TextBlock Text="Current Order" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                            <Button Style="{StaticResource DangerButton}" 
                                    Content="Clear"
                                    Command="{Binding ClearCartCommand}"
                                    HorizontalAlignment="Right"
                                    Padding="16,8"
                                    FontSize="12"/>
                        </Grid>
                        
                        <!-- Cart Items -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CartItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#334155" CornerRadius="12" Padding="16" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ProductName}" 
                                                               Foreground="White" 
                                                               FontSize="15"
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding UnitPrice, StringFormat='{}{0:C2} each'}" 
                                                               Foreground="#94A3B8" 
                                                               FontSize="12"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Quantity Controls -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                                                    <Button Content="âˆ’" 
                                                            Style="{StaticResource CartItemButton}"
                                                            Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <TextBlock Text="{Binding Quantity}" 
                                                               Foreground="White" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Width="48"
                                                               TextAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                    <Button Content="+" 
                                                            Style="{StaticResource CartItemButton}"
                                                            Background="#6366F1"
                                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                                
                                                <!-- Line Total -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding LineTotal, StringFormat='E {0:N2}'}" 
                                                           Foreground="#10B981" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           MinWidth="80"
                                                           TextAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Totals -->
                        <Border Grid.Row="2" Background="#334155" CornerRadius="12" Padding="20" Margin="0,16,0,16">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="Subtotal" Foreground="#94A3B8" FontSize="15"/>
                                    <TextBlock Text="{Binding SubTotal, StringFormat='E {0:N2}'}" 
                                               Foreground="White" FontSize="15" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="Tax (14%)" Foreground="#94A3B8" FontSize="15"/>
                                    <TextBlock Text="{Binding TaxAmount, StringFormat='E {0:N2}'}" 
                                               Foreground="White" FontSize="15" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="1" Background="#475569" Margin="0,6"/>
                                <Grid Margin="0,10,0,0">
                                    <TextBlock Text="TOTAL" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TotalAmount, StringFormat='E {0:N2}'}" 
                                               Foreground="#10B981" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Checkout Button -->
                        <Button Grid.Row="3" 
                                Style="{StaticResource SuccessButton}"
                                Command="{Binding ShowCheckoutCommand}"
                                Height="60"
                                FontSize="18">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’³" FontSize="22" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Checkout" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Payment Overlay -->
        <Grid Background="#0F172AE0" Visibility="{Binding IsCheckoutVisible, Converter={StaticResource BoolToVisibility}}">
            <Border Background="#1E293B" 
                    CornerRadius="20" 
                    Width="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="32">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’³" FontSize="28" Margin="0,0,12,0"/>
                            <TextBlock Text="Complete Payment" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                        <Button Style="{StaticResource SecondaryButton}"
                                Content="âœ•"
                                Command="{Binding HideCheckoutCommand}"
                                HorizontalAlignment="Right"
                                Padding="12,8"
                                FontSize="16"/>
                    </Grid>
                    
                    <!-- Total Display -->
                    <Border Grid.Row="1" Background="#334155" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Total Amount" Foreground="#94A3B8" FontSize="14" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='E {0:N2}'}" 
                                       Foreground="#10B981" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Payment Method -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Payment Method" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Cash" 
                                         GroupName="PaymentMethod"
                                         IsChecked="{Binding SelectedPaymentMethod, Converter={StaticResource StringMatchConverter}, ConverterParameter=Cash}"
                                         Foreground="White" FontSize="14" Margin="0,0,20,0" Padding="8,6"/>
                            <RadioButton Content="Card" 
                                         GroupName="PaymentMethod"
                                         IsChecked="{Binding SelectedPaymentMethod, Converter={StaticResource StringMatchConverter}, ConverterParameter=Card}"
                                         Foreground="White" FontSize="14" Margin="0,0,20,0" Padding="8,6"/>
                            <RadioButton Content="Mobile" 
                                         GroupName="PaymentMethod"
                                         IsChecked="{Binding SelectedPaymentMethod, Converter={StaticResource StringMatchConverter}, ConverterParameter=Mobile}"
                                         Foreground="White" FontSize="14" Margin="0,0,20,0" Padding="8,6"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Amount Tendered (for Cash) -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="Amount Tendered" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,10"/>
                        <TextBox Background="#334155" 
                                 Foreground="White" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 BorderThickness="0"
                                 Padding="16,12"
                                 Text="{Binding AmountTendered, StringFormat='E {0:N2}', UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Grid Margin="0,16,0,0" Visibility="{Binding ChangeAmount, Converter={StaticResource PositiveToVisibility}}">
                            <TextBlock Text="Change:" Foreground="#94A3B8" FontSize="16"/>
                            <TextBlock Text="{Binding ChangeAmount, StringFormat='E {0:N2}'}" 
                                       Foreground="#FBBF24" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Customer Phone (for Card/Mobile) -->
                    <StackPanel Grid.Row="3" Margin="0,100,0,20" 
                                Visibility="{Binding ShowPhoneField, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="ðŸ“± Customer Phone (for receipt)" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,10"/>
                        <TextBox Background="#334155" 
                                 Foreground="White" 
                                 FontSize="16"
                                 BorderThickness="0"
                                 Padding="16,12"
                                 Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                                 MaxLength="15"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                                Style="{StaticResource SecondaryButton}"
                                Content="Cancel"
                                Command="{Binding HideCheckoutCommand}"
                                Height="56"
                                FontSize="16"
                                Margin="0,0,8,0"/>
                        
                        <Button Grid.Column="1" 
                                Style="{StaticResource SuccessButton}"
                                Command="{Binding ProcessPaymentCommand}"
                                Height="56"
                                FontSize="16"
                                Margin="8,0,0,0"
                                IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBool}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Complete Sale"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
