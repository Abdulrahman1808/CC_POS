<Window x:Class="POSSystem.Views.BranchSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Branch - Ø§Ø®ØªØ± Ø§Ù„ÙØ±Ø¹"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Branch ListBox Item Style -->
        <Style x:Key="BranchItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="#1E293B" 
                                CornerRadius="8" 
                                Margin="0,4" 
                                Padding="16,12"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="Border" Property="Background" Value="#1E3A5F"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#334155"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Container with Shadow -->
    <Border Background="#0F172A" CornerRadius="16" Padding="32">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <!-- English Title (LTR) -->
                <TextBlock Text="ðŸª Select Your Branch" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                
                <!-- Arabic Title (RTL) -->
                <TextBlock Text="Ø§Ø®ØªØ± ÙØ±Ø¹Ùƒ" 
                           FontSize="18" 
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"
                           FlowDirection="RightToLeft"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Business Name Display -->
            <Border Grid.Row="1" Background="#1E293B" CornerRadius="8" Padding="12" Margin="0,8,0,16">
                <StackPanel>
                    <TextBlock Text="Business / Ø§Ù„Ø´Ø±ÙƒØ©" FontSize="11" Foreground="#64748B"/>
                    <TextBlock Text="{Binding BusinessName, FallbackValue='Loading...'}" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#F1F5F9"/>
                </StackPanel>
            </Border>
            
            <!-- Branch List or Status -->
            <Grid Grid.Row="2">
                <!-- Loading State -->
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                    <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Loading branches..." 
                               Foreground="#94A3B8" 
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="Ø¬Ø§Ø±ÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„ÙØ±ÙˆØ¹..." 
                               Foreground="#64748B" 
                               FontSize="12"
                               FlowDirection="RightToLeft"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Offline State -->
                <Border Background="#7F1D1D" 
                        CornerRadius="8" 
                        Padding="16"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsOffline, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ No Internet Connection" 
                                   Foreground="#FCA5A5" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Ù„Ø§ ÙŠÙˆØ¬Ø¯ Ø§ØªØµØ§Ù„ Ø¨Ø§Ù„Ø¥Ù†ØªØ±Ù†Øª" 
                                   Foreground="#FCA5A5" 
                                   FontSize="14"
                                   FlowDirection="RightToLeft"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,8"/>
                        <TextBlock Text="Please connect to the internet for first-time branch activation." 
                                   Foreground="#FECACA" 
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                        <Button Content="Retry / Ø¥Ø¹Ø§Ø¯Ø© Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ø©" 
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding RetryCommand}"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Branch List -->
                <ListBox ItemsSource="{Binding Branches}"
                         SelectedItem="{Binding SelectedBranch}"
                         ItemContainerStyle="{StaticResource BranchItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Visibility="{Binding HasBranches, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Branch Info (LTR) -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding NameAr}" 
                                               FontSize="13" 
                                               Foreground="#94A3B8"
                                               FlowDirection="RightToLeft"
                                               Visibility="{Binding NameAr, Converter={StaticResource NullToCollapsed}}"/>
                                    <TextBlock Text="{Binding Address}" 
                                               FontSize="12" 
                                               Foreground="#64748B"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <!-- Status Indicator -->
                                <Border Grid.Column="1" 
                                        Background="#10B981" 
                                        CornerRadius="4" 
                                        Padding="8,4"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="Active" FontSize="11" Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            
            <!-- Hardware Lock Warning -->
            <Border Grid.Row="3" 
                    Background="#422006" 
                    CornerRadius="8" 
                    Padding="12" 
                    Margin="0,16,0,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”’" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="This PC will be locked to the selected branch." 
                               Foreground="#FCD34D" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Action Buttons -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="Cancel / Ø¥Ù„ØºØ§Ø¡" 
                        Command="{Binding CancelCommand}"
                        Background="#374151"
                        Foreground="White"
                        Padding="16,12"
                        Margin="0,0,8,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B5563"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="1" 
                        Content="Confirm / ØªØ£ÙƒÙŠØ¯" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding ConfirmCommand}"
                        IsEnabled="{Binding CanConfirm}"
                        Margin="8,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
