<UserControl x:Class="POSSystem.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#111827">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1F2937" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â† Back" 
                            Command="{Binding BackToDashboardCommand}"
                            Background="#374151" Foreground="White"
                            FontSize="13" Padding="12,8" Margin="0,0,15,0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Text="Reports &amp; Analytics" 
                               FontSize="24" FontWeight="Bold" Foreground="#F9FAFB"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Period Selector -->
                <ComboBox Grid.Column="1" 
                          ItemsSource="{Binding Periods}"
                          SelectedItem="{Binding SelectedPeriod}"
                          Width="150" Margin="0,0,15,0"
                          FontSize="14"
                          Background="#374151"
                          BorderBrush="#4B5563">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="Black"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!-- Export Button -->
                <Button Grid.Column="2" Content="ðŸ“„ Export Report" 
                        Command="{Binding ExportToPdfCommand}"
                        Background="#10B981" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="20,12" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Revenue Card -->
            <Border Grid.Column="0" Background="#1F2937" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Total Revenue" Foreground="#9CA3AF" FontSize="13"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='E {0:N2}'}" 
                               Foreground="#10B981" FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Profit Card -->
            <Border Grid.Column="1" Background="#1F2937" CornerRadius="12" Padding="20" Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Gross Profit" Foreground="#9CA3AF" FontSize="13"/>
                    <TextBlock Text="{Binding GrossProfit, StringFormat='E {0:N2}'}" 
                               Foreground="#3B82F6" FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Cost Card -->
            <Border Grid.Column="2" Background="#1F2937" CornerRadius="12" Padding="20" Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Total Cost" Foreground="#9CA3AF" FontSize="13"/>
                    <TextBlock Text="{Binding TotalCost, StringFormat='E {0:N2}'}" 
                               Foreground="#F59E0B" FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Transactions Card -->
            <Border Grid.Column="3" Background="#1F2937" CornerRadius="12" Padding="20" Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Transactions" Foreground="#9CA3AF" FontSize="13"/>
                    <TextBlock Text="{Binding TotalTransactions}" 
                               Foreground="#8B5CF6" FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Avg Order Card -->
            <Border Grid.Column="4" Background="#1F2937" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Avg Order" Foreground="#9CA3AF" FontSize="13"/>
                    <TextBlock Text="{Binding AverageOrderValue, StringFormat='E {0:N2}'}" 
                               Foreground="#EC4899" FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Data Tables -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Top Products -->
            <Border Grid.Column="0" Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="Top Selling Products" Foreground="#F9FAFB" 
                               FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding TopProducts}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              RowBackground="#1E293B"
                              AlternatingRowBackground="#1F2937"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              FontSize="16">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="12,10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2D3748"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="#F9FAFB"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="12,10" Background="Transparent">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" MinWidth="80"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding QuantitySold}" Width="70" MinWidth="50"/>
                            <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat='E {0:N2}'}" Width="110" MinWidth="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
            <!-- Employee Sales -->
            <Border Grid.Column="2" Background="#1F2937" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="Sales by Employee" Foreground="#F9FAFB" 
                               FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding EmployeeSales}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              RowBackground="#1E293B"
                              AlternatingRowBackground="#1F2937"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              FontSize="16">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="12,10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2D3748"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="#F9FAFB"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="12,10" Background="Transparent">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*" MinWidth="80"/>
                            <DataGridTextColumn Header="Orders" Binding="{Binding TransactionCount}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalSales, StringFormat='E {0:N2}'}" Width="110" MinWidth="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
