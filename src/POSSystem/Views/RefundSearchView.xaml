<UserControl x:Class="POSSystem.Views.RefundSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:POSSystem.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:RefundViewModel}"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Refund Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                Padding="10"
                Background="#F9F9F9"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         Tag="Enter Transaction ID or Customer Phone..."/>
                
                <Button Grid.Column="1"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Search"
                        Width="100"
                        Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Results Grid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding SearchResults}"
                  SelectedItem="{Binding SelectedTransaction}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="#E0E0E0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt, StringFormat=g}" Width="150"/>
                <DataGridTextColumn Header="Transaction #" Binding="{Binding TransactionNumber}" Width="*"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C2}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Refund"
                                    Command="{Binding DataContext.ProcessRefundCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    IsEnabled="{Binding Status, Converter={StaticResource RefundStatusConverter}}"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Message -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0" Background="Transparent">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{StaticResource PrimaryBrush}"
                           FontWeight="SemiBold"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar IsIndeterminate="True" 
                             Width="100" 
                             Height="10" 
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
