<UserControl x:Class="POSSystem.Views.StaffLoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:POSSystem.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:StaffLoginViewModel}"
             Background="#CC000000">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" 
                CornerRadius="12" 
                Padding="30"
                Width="320"
                Effect="{StaticResource DefaultShadow}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Staff Login"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- PIN Display -->
                <Border Grid.Row="1" 
                        Background="#F5F5F5" 
                        CornerRadius="8" 
                        Padding="10"
                        Margin="0,0,0,20">
                    <Grid>
                        <TextBlock Text="{Binding PinMasked}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"/>
                        
                        <TextBlock Text="Enter PIN"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#999"
                                   Visibility="{Binding PinMasked, Converter={StaticResource StringVisibilityConverter}, ConverterParameter=Inverse}"/>
                    </Grid>
                </Border>

                <!-- Error Message -->
                <TextBlock Grid.Row="2"
                           Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"/>

                <!-- Numpad -->
                <UniformGrid Grid.Row="3" Columns="3" Rows="4" Margin="-5">
                    <Button Content="1" Command="{Binding AppendPinCommand}" CommandParameter="1" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="2" Command="{Binding AppendPinCommand}" CommandParameter="2" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="3" Command="{Binding AppendPinCommand}" CommandParameter="3" Style="{StaticResource NumpadButtonStyle}"/>
                    
                    <Button Content="4" Command="{Binding AppendPinCommand}" CommandParameter="4" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="5" Command="{Binding AppendPinCommand}" CommandParameter="5" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="6" Command="{Binding AppendPinCommand}" CommandParameter="6" Style="{StaticResource NumpadButtonStyle}"/>
                    
                    <Button Content="7" Command="{Binding AppendPinCommand}" CommandParameter="7" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="8" Command="{Binding AppendPinCommand}" CommandParameter="8" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="9" Command="{Binding AppendPinCommand}" CommandParameter="9" Style="{StaticResource NumpadButtonStyle}"/>
                    
                    <Button Content="C" Command="{Binding ClearCommand}" Style="{StaticResource NumpadButtonStyle}" Background="#FFEBEE" Foreground="Red"/>
                    <Button Content="0" Command="{Binding AppendPinCommand}" CommandParameter="0" Style="{StaticResource NumpadButtonStyle}"/>
                    <Button Content="âŒ«" Command="{Binding BackspaceCommand}" Style="{StaticResource NumpadButtonStyle}"/>
                </UniformGrid>

                <Button Grid.Row="3" 
                        VerticalAlignment="Bottom" 
                        Margin="0,20,0,0"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Login"
                        Height="50"
                        Grid.ColumnSpan="3"/>
            </Grid>
        </Border>
    </Grid>
    
    <UserControl.Resources>
        <Style x:Key="NumpadButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
