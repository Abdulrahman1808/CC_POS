<UserControl x:Class="POSSystem.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:POSSystem.ViewModels"
             xmlns:converters="clr-namespace:POSSystem.Converters"
             Background="#111827">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Search and Actions -->
        <Border Grid.Row="0" Background="#1F2937" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â† Back" 
                            Command="{Binding BackToDashboardCommand}"
                            Background="#374151" Foreground="White"
                            FontSize="13" Padding="12,8" Margin="0,0,15,0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Text="Inventory Management" 
                               FontSize="24" FontWeight="Bold" Foreground="#F9FAFB"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Search -->
                <Border Grid.Column="1" Background="#374151" CornerRadius="8" 
                        Margin="30,0" Padding="12,8" MaxWidth="400" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" Foreground="#F9FAFB"
                                 FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Category Filter -->
                <ComboBox Grid.Column="2" 
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Width="150" Margin="0,0,15,0"
                          FontSize="14"
                          Background="#374151"
                          BorderBrush="#4B5563">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="Black"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!-- Add Button -->
                <Button Grid.Column="3" Content="+ Add Product" 
                        Command="{Binding ShowAddProductCommand}"
                        Background="#3B82F6" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="20,12" Cursor="Hand" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Delete Selected Button -->
                <Button Grid.Column="4" Content="ðŸ—‘ Delete Selected" 
                        Command="{Binding DeleteSelectedCommand}"
                        Background="#EF4444" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="20,12" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#111827"
                  RowBackground="#1F2937"
                  AlternatingRowBackground="#1E293B"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#374151"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="20">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#0F172A"/>
                    <Setter Property="Foreground" Value="#94A3B8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="#F9FAFB"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3B82F6"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox IsChecked="{Binding DataContext.SelectAll, RelativeSource={RelativeSource AncestorType=DataGrid}, Mode=TwoWay}"
                                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="100"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C2}" Width="100"/>
                <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=C2}" Width="100"/>
                <DataGridTemplateColumn Header="Stock" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#374151"
                                    CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding StockQuantity}" Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Tax" Binding="{Binding TaxRate, StringFormat=P0}" Width="80"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" 
                                        Command="{Binding DataContext.ShowEditProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Background="#3B82F6" Foreground="White" 
                                        Padding="10,5" Margin="0,0,5,0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Del" 
                                        Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Background="#EF4444" Foreground="White"
                                        Padding="10,5" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Product Dialog Overlay -->
        <Border Grid.RowSpan="2" 
                Background="#80000000"
                Visibility="{Binding ShowProductDialog, Converter={StaticResource BoolToVisibility}}">
            <Border Background="#1F2937" CornerRadius="16" 
                    Width="500" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Add/Edit Product" 
                               FontSize="22" FontWeight="Bold" Foreground="#F9FAFB" Margin="0,0,0,20"/>
                    
                    <!-- Name -->
                    <TextBlock Text="Product Name *" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DialogProductName, UpdateSourceTrigger=PropertyChanged}"
                             Background="#374151" Foreground="#F9FAFB" FontSize="14"
                             Padding="12,10" Margin="0,0,0,15"/>
                    
                    <!-- Price and Cost Row -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Price" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogPrice, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Cost" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogCost, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Category and SKU Row -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Category" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogCategory, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="SKU" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogSku, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Stock and Tax Row -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Stock Quantity" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogStock, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Tax Rate (%)" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogTaxRate, UpdateSourceTrigger=PropertyChanged, StringFormat=P0}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Barcode -->
                    <TextBlock Text="Barcode" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DialogBarcode, UpdateSourceTrigger=PropertyChanged}"
                             Background="#374151" Foreground="#F9FAFB" FontSize="14"
                             Padding="12,10" Margin="0,0,0,25"/>
                    
                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="Cancel" 
                                Command="{Binding CancelDialogCommand}"
                                Background="#374151" Foreground="#F9FAFB"
                                FontSize="15" Padding="0,14" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Grid.Column="2" Content="Save Product" 
                                Command="{Binding SaveProductCommand}"
                                Background="#10B981" Foreground="White"
                                FontSize="15" FontWeight="SemiBold" Padding="0,14" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
