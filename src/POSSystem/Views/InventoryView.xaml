<UserControl x:Class="POSSystem.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:POSSystem.ViewModels"
             xmlns:converters="clr-namespace:POSSystem.Converters"
             Background="#111827">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Search and Actions -->
        <Border Grid.Row="0" Background="#1F2937" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â† Back" 
                            Command="{Binding BackToDashboardCommand}"
                            Background="#374151" Foreground="White"
                            FontSize="13" Padding="12,8" Margin="0,0,15,0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Text="Inventory Management" 
                               FontSize="24" FontWeight="Bold" Foreground="#F9FAFB"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Search -->
                <Border Grid.Column="1" Background="#374151" CornerRadius="8" 
                        Margin="30,0" Padding="12,8" MaxWidth="400" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" Foreground="#F9FAFB"
                                 FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Import Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“¥ Import CSV" 
                            Command="{Binding ImportCsvCommand}"
                            Background="#059669" Foreground="White"
                            FontSize="13" FontWeight="SemiBold"
                            Padding="14,10" Cursor="Hand" Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#047857"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="ðŸ“Š Import Excel" 
                            Command="{Binding ImportExcelCommand}"
                            Background="#7C3AED" Foreground="White"
                            FontSize="13" FontWeight="SemiBold"
                            Padding="14,10" Cursor="Hand" Margin="0,0,15,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6D28D9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <!-- Category Filter -->
                <ComboBox Grid.Column="3" 
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Width="150" Margin="0,0,15,0"
                          FontSize="14"
                          Background="#374151"
                          BorderBrush="#4B5563">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="Black"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                
                <!-- Add Button -->
                <Button Grid.Column="4" Content="+ Add Product" 
                        Command="{Binding ShowAddProductCommand}"
                        Background="#3B82F6" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="20,12" Cursor="Hand" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Delete Selected Button -->
                <Button Grid.Column="5" Content="ðŸ—‘ Delete Selected" 
                        Command="{Binding DeleteSelectedCommand}"
                        Background="#EF4444" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="20,12" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#111827"
                  RowBackground="#1F2937"
                  AlternatingRowBackground="#1E293B"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#374151"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="20">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#0F172A"/>
                    <Setter Property="Foreground" Value="#94A3B8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="#F9FAFB"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3B82F6"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.Header>
                        <CheckBox IsChecked="{Binding DataContext.SelectAll, RelativeSource={RelativeSource AncestorType=DataGrid}, Mode=TwoWay}"
                                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name / Ø§Ù„Ø§Ø³Ù…" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Category / Ø§Ù„ÙØ¦Ø©" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Type / Ø§Ù„Ù†ÙˆØ¹" Binding="{Binding ProductType}" Width="100"/>
                <DataGridTextColumn Header="Flavor / Ø§Ù„Ù†ÙƒÙ‡Ø©" Binding="{Binding Flavor}" Width="100"/>
                <DataGridTextColumn Header="Weight / Ø§Ù„ÙˆØ²Ù†" Binding="{Binding Weight}" Width="90"/>
                <DataGridTextColumn Header="Location / Ø§Ù„Ù…ÙˆÙ‚Ø¹" Binding="{Binding Location}" Width="100"/>
                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="100"/>
                <DataGridTemplateColumn Header="Stock / Ø§Ù„Ù…Ø®Ø²ÙˆÙ†" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#374151" CornerRadius="4" Padding="6,3" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding StockQuantity}" Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Retail Qty" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#059669" CornerRadius="4" Padding="6,3" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding RetailQuantity}" Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Cartons" Binding="{Binding CartonCount}" Width="60"/>
                <DataGridTextColumn Header="Units/Ctn" Binding="{Binding UnitsPerCarton}" Width="60"/>
                <DataGridTextColumn Header="Retail Price" Binding="{Binding RetailSalePrice, StringFormat=N2}" Width="80"/>
                <DataGridTextColumn Header="Wholesale" Binding="{Binding WholesaleSalePrice, StringFormat=N2}" Width="80"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" 
                                        Command="{Binding DataContext.ShowEditProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Background="#3B82F6" Foreground="White" 
                                        Padding="8,4" Margin="0,0,4,0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Del" 
                                        Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Background="#EF4444" Foreground="White"
                                        Padding="8,4" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
        
        <!-- Product Dialog Overlay -->
        <Border Grid.RowSpan="2" 
                Background="#80000000"
                Visibility="{Binding ShowProductDialog, Converter={StaticResource BoolToVisibility}}">
            <Border Background="#1F2937" CornerRadius="16" 
                    Width="600" MaxHeight="700" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Add/Edit Product / Ø¥Ø¶Ø§ÙØ© Ù…Ù†ØªØ¬" 
                               FontSize="22" FontWeight="Bold" Foreground="#F9FAFB" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Name -->
                            <TextBlock Text="Product Name / Ø§Ù„Ø§Ø³Ù… *" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DialogProductName, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#374151" Foreground="#F9FAFB" FontSize="14"
                                     Padding="12,10" Margin="0,0,0,12"/>
                            
                            <!-- Category and Type Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Category / Ø§Ù„ÙØ¦Ø©" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogCategory, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Type / Ø§Ù„Ù†ÙˆØ¹" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogProductType, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Flavor and Weight Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Flavor / Ø§Ù„Ù†ÙƒÙ‡Ø©" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogFlavor, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Weight / Ø§Ù„ÙˆØ²Ù†" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogWeight, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Location and Barcode Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Location / Ø§Ù„Ù…ÙˆÙ‚Ø¹" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogLocation, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Barcode / Ø§Ù„Ø¨Ø§Ø±ÙƒÙˆØ¯" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogBarcode, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Stock and Retail Qty Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Stock Qty (Wholesale) / Ø§Ù„ÙƒÙ…ÙŠØ©" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogStock, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Retail Qty / ÙƒÙ…ÙŠØ© Ø§Ù„Ù‚Ø·Ø§Ø¹Ù‰" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogRetailQuantity, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Cartons Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Carton Count / Ø¹Ø¯Ø¯ Ø§Ù„ÙƒØ±Ø§ØªÙŠÙ†" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogCartonCount, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Units Per Carton / ÙˆØ­Ø¯Ø§Øª Ø§Ù„ÙƒØ±ØªÙˆÙ†Ø©" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogUnitsPerCarton, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Prices Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Retail Price (EÂ£) / Ø³Ø¹Ø± Ø§Ù„Ù‚Ø·Ø§Ø¹Ù‰" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogRetailSalePrice, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Wholesale Price (EÂ£) / Ø³Ø¹Ø± Ø§Ù„Ø¬Ù…Ù„Ø©" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogWholesaleSalePrice, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Supplier Price and Min Stock Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Supplier Price (EÂ£) / Ø³Ø¹Ø± Ø§Ù„Ù…ÙˆØ±Ø¯" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogWholesaleSupplierPrice, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Min Stock / Ø§Ù„Ø­Ø¯ Ø§Ù„Ø£Ø¯Ù†Ù‰" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding DialogMinStock, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#374151" Foreground="#F9FAFB" FontSize="14" Padding="12,10"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="Cancel / Ø¥Ù„ØºØ§Ø¡" 
                                Command="{Binding CancelDialogCommand}"
                                Background="#374151" Foreground="#F9FAFB"
                                FontSize="15" Padding="0,14" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Grid.Column="2" Content="Save Product / Ø­ÙØ¸" 
                                Command="{Binding SaveProductCommand}"
                                Background="#10B981" Foreground="White"
                                FontSize="15" FontWeight="SemiBold" Padding="0,14" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Border>

    </Grid>
</UserControl>
